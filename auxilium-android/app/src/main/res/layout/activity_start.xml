<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".StartActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/normal_gap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clipToPadding="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_in"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center_horizontal"
            style="@style/TextAppearance.AppCompat.Title.Auxilium"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/aed_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/small_gap"
            android:background="@drawable/edit_text_background"
            android:lines="1"
            android:singleLine="true"
            android:imeOptions="actionGo"
            android:hint="@string/log_in_hint"/>

        <android.support.design.button.MaterialButton
            android:id="@+id/action_login"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/action_log_in"
            android:layout_marginTop="@dimen/huge_gap"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/normal_gap"
            android:enabled="false"
            app:cornerRadius="32dp"
            app:backgroundTint="@color/button_bg_color"
            app:icon="@drawable/ic_arrow_forward_white_24dp"
            android:textColor="@color/button_fg_color"
            app:iconTint="@color/button_fg_color"
            android:textAppearance="@style/TextAppearance.AppCompat.Button.Auxilium"
            style="@style/Widget.MaterialComponents.Button" />

        <android.support.design.button.MaterialButton
            android:id="@+id/action_register"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/action_register"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/normal_gap"
            android:enabled="false"
            app:cornerRadius="32dp"
            app:backgroundTint="@color/button_inverse_bg_color"
            app:icon="@drawable/ic_add_black_24dp"
            android:textColor="@color/button_inverse_fg_color"
            app:iconTint="@color/button_inverse_fg_color"
            android:textAppearance="@style/TextAppearance.AppCompat.Button.Auxilium.Inverse"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>